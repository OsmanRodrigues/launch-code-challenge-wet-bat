{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@adapters": ["adapters"],
            "@adapters/*": ["adapters/*"],
            "@atomic": ["atomic"],
            "@atomic/*": ["atomic/*"],
            "@domain": ["domain"],
            "@domain/*": ["domain/*"],
            "@entities": ["entities"],
            "@entities/*": ["entities/*"],
            "@frameworks": ["frameworks"],
            "@frameworks/*": ["frameworks/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"]
        },
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
